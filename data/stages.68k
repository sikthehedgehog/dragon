;****************************************************************************
; StageList
; Defines the stage list. Also defines all the STAGE_* constants.
;****************************************************************************

StageList:
    rsreset
    
@Entry: macro name
STAGE_\name: rs.b 1
    dc.l    StageData_\name
    endm
    
    @Entry      Entrance1
    @Entry      Entrance2
    @Entry      Entrance3
    @Entry      Entrance4
    
    @Entry      Basement1
    @Entry      Basement2
    @Entry      Basement3
    @Entry      Basement4
    @Entry      Basement5
    @Entry      Basement5B
    
    @Entry      Hall1
    @Entry      Hall2
    @Entry      Hall3
    @Entry      Hall4
    @Entry      Hall4B
    @Entry      Hall5
    @Entry      HallOut
    
    @Entry      Mirror1
    @Entry      Mirror2
    
    @Entry      Lava1
    @Entry      Lava2
    @Entry      Lava3
    @Entry      Lava4
    
    @Entry      Shrine1
    @Entry      Shrine2
    @Entry      Shrine3
    
    @Entry      FinalBoss
    
    inform 0, "Number of stages: %d", __RS
